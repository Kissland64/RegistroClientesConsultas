@page "/Clientes"

@inject ClientesBLL clientesBLL

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombres</th>
            <th>Teléfono</th>
            <th>Celular</th>
            <th>RNC</th>
            <th>Email</th>
            <th>Dirección</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Clientes)
        {
            <tr>
                <td>@item.ClienteId</td>
                <td>@item.Nombre</td>
                <td>@item.Telefono</td>
                <td>@item.Celular</td>
                <td>@item.RNC</td>
                <td>@item.Email</td>
                <td>@item.Direccion</td>
            </tr>
        }
    </tbody>
</table>

@code {
    public List<Clientes> Clientes { get; set; } = new List<Clientes>();

    protected override void OnInitialized()
    {
        Clientes = clientesBLL.Listar(c => true);
    }
}
